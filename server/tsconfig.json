{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    
    "types": ["node"],
    
    "allowJs": true,           
    "checkJs": false,
    
    "declaration": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../packages/common/dist/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}