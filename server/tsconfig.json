{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    
    "types": ["node"],
    
    "allowJs": true,           
    "checkJs": false,
    "noImplicitAny": false,
    "declaration": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "references": [
      {
        "path": "../common"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}