{
  "name": "flashlearn-mern",
  "version": "1.0.1",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "install:all": "pnpm install",
    "build:client": "pnpm -F client build",
    "build:server": "pnpm -F server build",
    "build:common": "pnpm -F common run build",
    "build:netlify": "netlify build",
    "build": "pnpm run build:common && pnpm run --parallel --stream -F client -F server build",
    "preview:client": "pnpm -F client preview",
    "preview": "pnpm run --parallel --stream -F client preview -F server start",
    "db:migrate": "pnpm -F server migrate:all-tables",
    "db:migrate:undo": "pnpm -F server migrate:undo",
    "dev:server:prod-env": "pnpm -F server dev:prod-env",
    "dev:server": "pnpm -F server dev",
    "dev:client:prod-env": "pnpm -F client dev:prod-env",
    "dev:client": "pnpm -F client dev",
    "dev:netlify:prod-env": "conc 'pnpm dev:server:prod-env' 'pnpm dev:client:prod-env'",
    "dev:netlify:prod-build": "pnpm run build:client && pnpm run start:server",
    "dev:netlify:server": "conc 'pnpm dev:server' 'pnpm dev:client'",
    "dev:netlify": "netlify dev --filter client",
    "dev": "pnpm --parallel --stream -F client -F server dev",
    "start:server": "pnpm -F server start",
    "start:netlify": "netlify build && netlify serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  }
}
