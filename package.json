{
  "name": "flashlearn-mern",
  "version": "2.0.3",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "bump": "npm version $1 --no-git-tag-version && pnpm -r exec npm version $1 --no-git-tag-version",
    "install:all": "pnpm install",
    "build:client": "pnpm -F client build",
    "build:server": "pnpm -F server build",
    "build:netlify": "netlify build",
    "build:schema-db": "pnpm -F schema-db run build",
    "build": "pnpm run build:schema-db && pnpm run --parallel --stream -F client -F server build",
    "ts-check:client": "pnpm -F client ts-check",
    "ts-check:server": "pnpm -F server ts-check",
    "ts-check": "pnpm run ts-check:client && pnpm run ts-check:server",
    "preview:client": "pnpm -F client preview",
    "preview": "pnpm run --parallel --stream -F client preview -F server start",
    "db:generate": "pnpm -F schema-db db:generate",
    "db:migrate": "pnpm -F schema-db db:migrate",
    "db:migrate:undo": "pnpm -F schema-db db:migrate:undo",
    "db:migrate:undo:all": "pnpm -F schema-db db:migrate:undo:all",
    "db:pull": "pnpm -F schema-db db:pull",
    "db:push": "pnpm -F schema-db db:push",
    "db:check": "pnpm -F schema-db db:check",
    "dev:server:prod": "pnpm -F server prod",
    "dev:server": "pnpm -F server dev",
    "dev:client:prod": "pnpm -F client prod",
    "dev:client": "pnpm -F client dev",
    "dev:netlify:prod": "conc 'pnpm dev:server:prod' 'pnpm dev:client:prod'",
    "dev:netlify:prod-build": "pnpm run build:client && pnpm run start:server",
    "dev:netlify:server": "conc 'pnpm dev:server' 'pnpm dev:client'",
    "dev:netlify": "netlify dev --filter client",
    "dev": "pnpm --parallel --stream -F client -F server dev",
    "start:server": "pnpm -F server start",
    "start:netlify": "netlify build && netlify serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  }
}
